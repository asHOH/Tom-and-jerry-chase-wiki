{
  "name": "tom-and-jerry-chase-wiki",
  "version": "0.1.0",
  "private": true,
  "description": "专为《猫和老鼠手游》玩家打造的数据查询网站",
  "homepage": "https://tjwiki.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/asHOH/Tom-and-jerry-chase-wiki.git"
  },
  "bugs": {
    "url": "https://github.com/asHOH/Tom-and-jerry-chase-wiki/issues"
  },
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/asHOH"
  },
  "author": "asHOH",
  "license": "(CC-BY-4.0 AND GPL-3.0-or-later)",
  "keywords": [
    "tom-and-jerry",
    "mobile-game",
    "wiki",
    "nextjs",
    "react"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/generate-doc-pages.mjs && next build --webpack && node scripts/run-image-optimization.cjs",
    "generate:changelogs": "node scripts/generate-changelogs.mjs",
    "set-runtime:edge": "node scripts/set-api-runtime.mjs edge",
    "set-runtime:node": "node scripts/set-api-runtime.mjs nodejs",
    "build:skip-images": "node scripts/generate-doc-pages.mjs && next build --webpack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "eslint --fix --max-warnings=0",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:staged": "prettier --write --ignore-unknown",
    "format": "npm run prettier:fix && npm run lint:fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=50%",
    "test:changed": "jest --onlyChanged --passWithNoTests",
    "clean": "rimraf .next out coverage",
    "analyze": "cross-env ANALYZE=true npm run build",
    "audit": "npm audit --audit-level=moderate",
    "outdated": "npm outdated",
    "size": "bundlesize",
    "update-readme": "npm run compile-contributors && node scripts/update-readme-acknowledgments.mjs && npm run cleanup-temp",
    "compile-contributors": "node -e \"const fs=require('fs'); fs.mkdirSync('scripts/temp', {recursive:true}); fs.writeFileSync('scripts/temp/package.json', '{\\\"type\\\":\\\"module\\\"}');\" && tsc src/data/contributors.ts --outDir scripts/temp --module esnext --target es2020 --moduleResolution bundler --skipLibCheck",
    "cleanup-temp": "rimraf scripts/temp",
    "pre-push:force-fast": ".husky/pre-push-fast",
    "pre-push:force-full": "cross-env FORCE_FULL_PREPUSH=true .husky/pre-push",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@hcaptcha/react-hcaptcha": "^1.16.0",
    "@marsidev/react-turnstile": "^1.3.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.7",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "^2.86.0",
    "@tiptap/core": "3.11.1",
    "@tiptap/extension-code-block-lowlight": "^3.11.1",
    "@tiptap/extension-image": "3.11.1",
    "@tiptap/extension-link": "3.11.1",
    "@tiptap/extension-table": "3.11.1",
    "@tiptap/extension-table-cell": "3.11.1",
    "@tiptap/extension-table-header": "3.11.1",
    "@tiptap/extension-table-row": "3.11.1",
    "@tiptap/extension-text-align": "3.11.1",
    "@tiptap/pm": "3.11.1",
    "@tiptap/react": "3.11.1",
    "@tiptap/starter-kit": "3.11.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "json5": "^2.2.3",
    "jsondiffpatch": "^0.7.3",
    "lowlight": "^3.3.0",
    "motion": "12.23.24",
    "next": "^16.0.7",
    "next-pwa": "^5.6.0",
    "pinyin-pro": "^3.27.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "swr": "^2.3.7",
    "valtio": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/nextjs": "^10.1.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/semver": "^7.7.1",
    "baseline-browser-mapping": "^2.9.2",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-testing-library": "^7.13.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rimraf": "^6.1.2",
    "schema-dts": "^1.1.5",
    "storybook": "^9.1.10",
    "supabase": "^2.63.1",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "trim-newlines": "^3.0.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "js-yaml": "^4.1.1"
  },
  "lint-staged": {
    "{*.{js,jsx,ts,tsx,mjs,cjs},!(templates|.next|out|coverage)/**/*.{js,jsx,ts,tsx,mjs,cjs}}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --max-warnings=0 --cache --no-warn-ignored"
    ],
    "{*.{json,css,md,mdx},!(templates|.next|out|coverage)/**/*.{json,css,md,mdx}}": [
      "prettier --write --ignore-unknown"
    ],
    "public/**/*.html": [
      "prettier --write --ignore-unknown"
    ]
  },
  "depcheck": {
    "ignores": [
      "@tailwindcss/postcss",
      "@types/jest",
      "@types/node",
      "depcheck",
      "eslint",
      "eslint-config-next",
      "jest-environment-jsdom",
      "postcss",
      "rimraf",
      "tailwindcss",
      "ts-node"
    ]
  }
}
