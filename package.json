{
  "name": "tom-and-jerry-chase-wiki",
  "version": "0.1.0",
  "private": true,
  "description": "专为《猫和老鼠手游》玩家打造的数据查询网站",
  "homepage": "https://tjwiki.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/asHOH/Tom-and-jerry-chase-wiki.git"
  },
  "bugs": {
    "url": "https://github.com/asHOH/Tom-and-jerry-chase-wiki/issues"
  },
  "author": "asHOH",
  "keywords": [
    "tom-and-jerry",
    "mobile-game",
    "wiki",
    "nextjs",
    "react"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/run-image-optimization.cjs && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:staged": "next lint --fix --max-warnings=0",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:staged": "prettier --write --ignore-unknown",
    "format": "npm run prettier:fix && npm run lint:fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=50%",
    "test:changed": "jest --onlyChanged --passWithNoTests",
    "clean": "rimraf .next out coverage",
    "analyze": "cross-env ANALYZE=true npm run build",
    "audit": "npm audit --audit-level=moderate",
    "outdated": "npm outdated",
    "size": "bundlesize",
    "update-readme": "npm run compile-contributors && node scripts/update-readme-acknowledgments.mjs && npm run cleanup-temp",
    "compile-contributors": "node -e \"const fs=require('fs'); fs.mkdirSync('scripts/temp', {recursive:true}); fs.writeFileSync('scripts/temp/package.json', '{\\\"type\\\":\\\"module\\\"}');\" && tsc src/data/contributors.ts --outDir scripts/temp --module esnext --target es2020 --moduleResolution bundler --skipLibCheck",
    "cleanup-temp": "rimraf scripts/temp",
    "pre-push:force-fast": ".husky/pre-push-fast",
    "pre-push:force-full": "cross-env FORCE_FULL_PREPUSH=true .husky/pre-push",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "json5": "^2.2.3",
    "jsondiffpatch": "^0.7.3",
    "motion": "^12.23.12",
    "next": "^15.4.2",
    "next-pwa": "^5.6.0",
    "pinyin-pro": "^3.27.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-gfm": "^4.0.1",
    "swr": "^2.3.4",
    "valtio": "^2.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.4.2",
    "@storybook/addon-docs": "^9.1.0",
    "@storybook/addon-onboarding": "^9.1.0",
    "@storybook/nextjs": "^9.1.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.5",
    "@types/semver": "^7.7.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-storybook": "^9.1.3",
    "eslint-plugin-testing-library": "^7.6.6",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.3",
    "storybook": "^9.1.0",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "!(templates|.next|out|coverage)/**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --max-warnings=0 --cache"
    ],
    "!(templates|.next|out|coverage)/**/*.{json,css,md,mdx}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "depcheck": {
    "ignores": [
      "@tailwindcss/postcss",
      "@types/jest",
      "@types/node",
      "autoprefixer",
      "depcheck",
      "eslint",
      "eslint-config-next",
      "jest-environment-jsdom",
      "postcss",
      "rimraf",
      "tailwindcss",
      "ts-node"
    ]
  }
}
