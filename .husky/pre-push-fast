#!/bin/sh

echo "üöÄ Running fast pre-push checks (development mode)..."

# Quick lint check first (fail fast)
echo "‚ö° Quick lint check..."
if ! npx eslint --cache --max-warnings=0 "src/**/*.{js,jsx,ts,tsx}" > /dev/null 2>&1; then
  echo "‚ùå ESLint errors found. Fix them before pushing."
  exit 1
fi

# Run type-check and changed tests in parallel
echo "üèÉ‚Äç‚ôÇÔ∏è Running type-check and tests on changed files..."

# Start both processes in background
npm run type-check &
TYPE_CHECK_PID=$!

npm run test:changed &
TEST_PID=$!

# Wait for both to complete and capture exit codes
wait $TYPE_CHECK_PID
TYPE_CHECK_EXIT=$?

wait $TEST_PID
TEST_EXIT=$?

# Check results
if [ $TYPE_CHECK_EXIT -ne 0 ]; then
  echo "‚ùå TypeScript type check failed"
  exit 1
fi

if [ $TEST_EXIT -ne 0 ]; then
  echo "‚ùå Tests failed"
  exit 1
fi

echo "‚úÖ Fast pre-push checks passed!"
