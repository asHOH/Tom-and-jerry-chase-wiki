#!/bin/sh

echo "ğŸš€ Running fast pre-push checks (development mode)..."

# Quick lint check first (fail fast)
echo "âš¡ Quick lint check..."
if ! npx eslint --cache --max-warnings=0 "src/**/*.{js,jsx,ts,tsx}" > /dev/null 2>&1; then
  echo "âŒ ESLint errors found. Fix them before pushing."
  exit 1
fi

# Ensure public HTML files stay formatted
echo "ğŸ§¹ Checking public HTML formatting..."
if ! npx prettier --check "public/**/*.html"; then
  echo "âŒ Prettier formatting issues found in public HTML files"
  exit 1
fi

# Run type-check and changed tests in parallel
echo "ğŸƒâ€â™‚ï¸ Running type-check and tests on changed files..."

# Start both processes in background
npm run type-check &
TYPE_CHECK_PID=$!

npm run test:changed &
TEST_PID=$!

# Wait for both to complete and capture exit codes
wait $TYPE_CHECK_PID
TYPE_CHECK_EXIT=$?

wait $TEST_PID
TEST_EXIT=$?

# Check results
if [ $TYPE_CHECK_EXIT -ne 0 ]; then
  echo "âŒ TypeScript type check failed"
  exit 1
fi

if [ $TEST_EXIT -ne 0 ]; then
  echo "âŒ Tests failed"
  exit 1
fi

echo "âœ… Fast pre-push checks passed!"
