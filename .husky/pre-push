#!/bin/sh

# Detect current branch
CURRENT_BRANCH=$(git branch --show-current)
MAIN_BRANCHES="main|master|production|prod"

# Check if we're on a main branch or force full mode
if [ "$FORCE_FULL_PREPUSH" = "true" ] || echo "$CURRENT_BRANCH" | grep -qE "^($MAIN_BRANCHES)$"; then
  if [ "$FORCE_FULL_PREPUSH" = "true" ]; then
    echo "ğŸ” Running FULL pre-push checks (forced via FORCE_FULL_PREPUSH)..."
  else
    echo "ğŸ” Running FULL pre-push checks (on $CURRENT_BRANCH branch)..."
  fi
  RUN_MODE="full"
else
  echo "ğŸš€ Running FAST pre-push checks (on $CURRENT_BRANCH branch)..."
  echo "ğŸ’¡ Full checks will run when pushing to main/master"
  RUN_MODE="fast"
fi

# Quick lint check first (fail fast for both modes)
echo "âš¡ Quick lint check..."
if ! npx eslint --cache --max-warnings=0 "." > /dev/null 2>&1; then
  echo "âŒ ESLint errors found. Fix them before pushing."
  exit 1
fi

# Align with CI's Prettier check so formatting issues fail locally first
echo "ğŸ§¼ Checking Prettier formatting..."
if ! npm run prettier:check; then
  echo "âŒ Prettier formatting issues found. Run 'npm run prettier:fix' to resolve."
  exit 1
fi

# Run type-check and tests in parallel
if [ "$RUN_MODE" = "full" ]; then
  echo "ğŸƒâ€â™‚ï¸ Running type-check and ALL tests in parallel..."
  
  # Start both processes in background
  npm run type-check &
  TYPE_CHECK_PID=$!
  
  npm run test:ci &
  TEST_PID=$!
else
  echo "ğŸƒâ€â™‚ï¸ Running type-check and tests on CHANGED files..."
  
  # Start both processes in background
  npm run type-check &
  TYPE_CHECK_PID=$!
  
  npm run test:changed &
  TEST_PID=$!
fi

# Wait for both to complete and capture exit codes
wait $TYPE_CHECK_PID
TYPE_CHECK_EXIT=$?

wait $TEST_PID
TEST_EXIT=$?

# Check results
if [ $TYPE_CHECK_EXIT -ne 0 ]; then
  echo "âŒ TypeScript type check failed"
  exit 1
fi

if [ $TEST_EXIT -ne 0 ]; then
  echo "âŒ Tests failed"
  exit 1
fi

if [ "$RUN_MODE" = "full" ]; then
  echo "âœ… All pre-push checks passed! Ready for $CURRENT_BRANCH"
else
  echo "âœ… Fast pre-push checks passed! ($CURRENT_BRANCH branch)"
  echo "ğŸ’¡ Use 'git push --no-verify' to skip all checks"
fi
